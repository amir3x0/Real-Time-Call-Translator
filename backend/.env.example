# =============================================================================
# Real-Time Call Translator - Backend Configuration
# =============================================================================
# Copy this file to .env and configure all required values.
# IMPORTANT: Never commit .env to version control - it contains secrets.
#
# Required variables are marked with [REQUIRED]
# Optional variables have sensible defaults shown
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Connection settings for the PostgreSQL database
DB_USER=translator_admin          # Database username
DB_PASSWORD=                      # [REQUIRED] Database password - set a strong password
DB_NAME=call_translator           # Database name
DB_HOST=localhost                 # Use 'postgres' when running in Docker
DB_PORT=5432                      # PostgreSQL port (5433 if using Docker port mapping)

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Redis is used for caching, session management, and audio stream queuing
REDIS_HOST=localhost              # Use 'redis' when running in Docker
REDIS_PORT=6379                   # Redis port
REDIS_PASSWORD=                   # [REQUIRED] Redis password - set a strong password

# -----------------------------------------------------------------------------
# Google Cloud Platform Configuration
# -----------------------------------------------------------------------------
# Required for Speech-to-Text, Translation, and Text-to-Speech services
GOOGLE_APPLICATION_CREDENTIALS=   # [REQUIRED] Path to service account JSON file
                                  # Example: /app/app/config/google-credentials.json (Docker)
                                  # Example: ./app/config/google-credentials.json (local)
GOOGLE_PROJECT_ID=                # [REQUIRED] Your GCP project ID

# Vertex AI region for Gemini context resolution (optional feature)
VERTEX_AI_LOCATION=us-central1    # GCP region with Vertex AI support

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0                  # Bind address (0.0.0.0 for all interfaces)
API_PORT=8000                     # API server port
API_PUBLIC_HOST=                  # Public hostname for WebSocket URLs
                                  # Set this when API_HOST is 0.0.0.0 and clients
                                  # need to connect via a specific hostname/IP
DEBUG=False                       # Set True for development (enables SQL logging)

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# JWT settings for authentication tokens
JWT_SECRET_KEY=                   # [REQUIRED] Secret key for JWT signing
                                  # Generate with: openssl rand -hex 32
                                  # Or: python -c "import secrets; print(secrets.token_hex(32))"
JWT_ALGORITHM=HS256               # JWT signing algorithm (don't change unless needed)
JWT_EXP_DAYS=7                    # Token expiration period in days

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for cross-origin requests
# BACKEND_CORS_ORIGINS=http://localhost,http://localhost:3000

# -----------------------------------------------------------------------------
# File Storage Paths
# -----------------------------------------------------------------------------
# Directories for storing user uploads and generated files
# DATA_DIR=/app/data               # Base data directory
# VOICE_SAMPLES_DIR=/app/data/voice_samples  # Voice training samples
# UPLOADS_DIR=/app/data/uploads    # User file uploads
# MODELS_DIR=/app/data/models      # ML model files
